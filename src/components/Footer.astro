		<div class="flex justify-center space-x-6 md:order-2">
			{socialLinks.map((item) => (
				<a
					href={item.href}
					class="text-gray-400 hover:text-gray-500 dark:hover:text-gray-300"
					target="_blank"
					rel="noopener noreferrer"
