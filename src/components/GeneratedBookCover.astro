---
interface Props {
    title: string;
    profession: string;
}

const { title, profession } = Astro.props;

type ProfessionTheme = {
    main: string;
    gradient: string;
    text: string;
};

const professionThemes: Record<string, ProfessionTheme> = {
    "Chef de Projet": {
        main: "var(--accent-regular)",
        gradient: "linear-gradient(135deg, var(--accent-regular), var(--accent-dark))",
        text: "var(--accent-text-over)"
    },
    "Formateur": {
        main: "var(--accent-dark)",
        gradient: "linear-gradient(135deg, var(--accent-dark), var(--accent-regular))",
        text: "var(--accent-text-over)"
    },
    "Sales Team Manager": {
        main: "var(--accent-subtle)",
        gradient: "linear-gradient(135deg, var(--accent-subtle), var(--accent-overlay))",
        text: "var(--accent-text-over)"
    },
    "DÃ©veloppeur React JS": {
        main: "var(--accent-overlay)",
        gradient: "linear-gradient(135deg, var(--accent-overlay), var(--accent-subtle))",
        text: "var(--accent-text-over)"
    }
};

const theme = professionThemes[profession] || {
    main: "var(--accent-regular)",
    gradient: "linear-gradient(135deg, var(--accent-regular), var(--accent-dark))",
    text: "var(--accent-text-over)"
};
---

<div class="generated-cover">
    <div class="content">
        <div class="profession">{profession}</div>
        <h3 class="title">{title}</h3>
    </div>
    <div class="pattern"></div>
</div>

<style define:vars={{ 
    mainColor: theme.main,
    gradientBg: theme.gradient,
    textColor: theme.text 
}}>
    .generated-cover {
        width: 100%;
        height: 100%;
        position: relative;
        background: var(--gradientBg);
        border-radius: 0.5rem;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 1.5rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border: 1px solid var(--mainColor);
    }

    .content {
        position: relative;
        z-index: 2;
        text-align: center;
        color: var(--textColor);
        padding: 1rem;
        background: rgba(0, 0, 0, 0.2);
        border-radius: 0.3rem;
        backdrop-filter: blur(4px);
    }

    .profession {
        font-size: var(--text-sm);
        text-transform: uppercase;
        letter-spacing: 0.1em;
        margin-bottom: 0.5rem;
        opacity: 0.9;
        color: var(--textColor);
        font-weight: 500;
    }

    .title {
        font-size: var(--text-lg);
        font-weight: 600;
        line-height: 1.3;
        margin: 0;
        color: var(--textColor);
    }

    .pattern {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-image: radial-gradient(
            circle at 1px 1px,
            var(--textColor) 1px,
            transparent 0
        );
        background-size: 20px 20px;
        opacity: 0.1;
        z-index: 1;
    }

    @media (max-width: 768px) {
        .title {
            font-size: var(--text-md);
        }
        
        .profession {
            font-size: var(--text-xs);
        }

        .content {
            padding: 0.75rem;
        }
    }
</style> 