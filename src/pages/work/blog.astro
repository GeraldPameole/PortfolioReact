<BaseLayout title="Articles et Ressources" description="Découvrez des articles et des livres recommandés par profession">
    <div className="stack gap-20">
        <main className="wrapper stack gap-8">
            <Hero
                title="Articles et Ressources"
                tagline="Explorez des articles et des livres recommandés pour chaque profession"
                align="start"
            />
            
            <section className="articles-section">
                <h2 className="text-3xl font-bold mb-8">Quelques articles tirés de mes expériences</h2>
                <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    {articles.map((article, index) => (
                        <a href={`/articles/${article.slug}`} className="group">
                            <div className="article-card bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 transition-all duration-300 hover:shadow-lg hover:transform hover:-translate-y-1">
                                <h3 className="text-xl font-semibold mb-3 group-hover:text-primary">{article.title}</h3>
                                <p className="text-gray-600 dark:text-gray-300 mb-4">{article.description}</p>
                                <h4 className="text-sm font-medium text-gray-500 dark:text-gray-400 mb-2">Compétences Associées :</h4>
                                <ul className="flex flex-wrap gap-2">
                                    {article.skills.map(skill => (
                                        <li className="px-2 py-1 text-sm bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-full">
                                            {skill}
                                        </li>
                                    ))}
                                </ul>
                            </div>
                        </a>
                    ))}
                </div>
            </section>

            <section className="books-section">
                <h2 className="text-3xl font-bold mb-8">Quelques livres recommandés par profession</h2>
                {booksByProfession.map((profession) => (
                    <div className="mb-12">
                        <h3 className="text-2xl font-semibold mb-6">{profession.profession}</h3>
                        <Grid variant="offset">
                            {profession.books.map((book) => (
                                <div className="book-card bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
                                    <BookCover
                                        cover={book.cover}
                                        title={book.title}
                                        profession={profession.profession}
                                    />
                                    <div className="p-4">
                                        <h4 className="text-lg font-semibold mb-2">{book.title}</h4>
                                        <p className="text-gray-600 dark:text-gray-300 text-sm">{book.summary}</p>
                                    </div>
                                </div>
                            ))}
                        </Grid>
                    </div>
                ))}
            </section>
        </main>
        <ContactCTA />
    </div>
</BaseLayout>

