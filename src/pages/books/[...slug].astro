---
import BackButton from '@/components/BackButton.astro';
import type { CollectionEntry } from 'astro:content';
import { getCollection } from 'astro:content';
import Layout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
	const books = await getCollection('books');
	return books.map((book) => ({
		params: { slug: book.slug },
		props: { book },
	}));
}

interface Props {
	book: CollectionEntry<'books'>;
}

const { book } = Astro.props;
const { Content } = await book.render();

// Mapping des professions pour l'affichage
const professionLabels: Record<string, string> = {
	"entreprise-management": "Entreprise & Management",
	"business-strategie": "Business & Stratégie",
	"developpement-web": "Développement Web", 
	"developpement-personnel": "Développement Pro & Personnel"
};
---

<Layout 
	title={book.data.title}
	description={book.data.description}
>
	<div class="content-container-wide py-12">
		<div class="book-meta-top">
			<a href="/blog" class="back-link">&larr; Retour aux livres</a>
			<span class="book-profession">{professionLabels[book.data.profession as string] || book.data.profession}</span>
		</div>
		
		<div class="book-content-wrapper">
			<aside class="book-sidebar">
				{book.data.coverImage ? (
					<img src={book.data.coverImage} alt={`Couverture du livre ${book.data.title}`} class="book-cover" />
				) : (
					<div class="book-cover-placeholder">
						<div class="book-title-placeholder">{book.data.title}</div>
						<div class="book-author-placeholder">{book.data.author}</div>
					</div>
				)}
				
				<div class="book-details">
					{book.data.publishYear && (
						<div class="book-detail">
							<span class="detail-label">Année de publication</span>
							<span class="detail-value">{book.data.publishYear}</span>
						</div>
					)}
					
					{book.data.amazonLink && (
						<a href={book.data.amazonLink} target="_blank" rel="noopener noreferrer" class="amazon-link">
							Voir sur Amazon
						</a>
					)}
				</div>
			</aside>
			
			<div class="book-main-content">
				<header class="book-header">
					<h1>{book.data.title}</h1>
					<p class="book-author">Par {book.data.author}</p>
					<p class="book-description">{book.data.description}</p>
				</header>

				<div class="book-content-typography">
					<Content />
				</div>
			</div>
		</div>
		<BackButton position="bottom-right" />
	</div>
</Layout>

<style>
	/* Styles spécifiques à la page livre */
	.book-meta-top {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-bottom: var(--content-spacing-xl);
	}

	.back-link {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		color: var(--color-secondary-warm);
		text-decoration: none;
		font-weight: 500;
		transition: color 0.2s ease;
	}

	.back-link:hover {
		color: var(--color-tertiary-light);
	}

	.book-profession {
		display: inline-block;
		background-color: var(--color-secondary-warm);
		color: white;
		font-size: var(--text-xs);
		font-weight: 600;
		padding: 0.4rem 0.8rem;
		border-radius: 2rem;
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	.book-content-wrapper {
		display: grid;
		grid-template-columns: minmax(200px, 1fr) 3fr;
		gap: var(--content-spacing-2xl);
	}

	.book-sidebar {
		display: flex;
		flex-direction: column;
		gap: var(--content-spacing-lg);
	}

	.book-cover {
		width: 100%;
		border-radius: var(--content-border-radius);
		box-shadow: var(--content-shadow-md);
	}

	.book-cover-placeholder {
		aspect-ratio: 2/3;
		background: linear-gradient(135deg, var(--color-primary-dark) 0%, var(--color-secondary-warm) 100%);
		border-radius: var(--content-border-radius);
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		padding: var(--content-spacing-lg);
		text-align: center;
		box-shadow: var(--content-shadow-md);
	}

	.book-title-placeholder {
		font-weight: bold;
		color: white;
		font-size: var(--text-lg);
		margin-bottom: var(--content-spacing-md);
	}

	.book-author-placeholder {
		color: rgba(255, 255, 255, 0.8);
		font-size: var(--text-sm);
	}

	.book-details {
		display: flex;
		flex-direction: column;
		gap: var(--content-spacing-md);
		margin-top: var(--content-spacing-md);
		background-color: rgba(0, 0, 0, 0.05);
		padding: var(--content-spacing-lg);
		border-radius: var(--content-border-radius);
		border: 1px solid rgba(0, 0, 0, 0.1);
	}

	.book-detail {
		display: flex;
		flex-direction: column;
		gap: var(--content-spacing-xs);
	}

	.detail-label {
		font-size: var(--text-xs);
		color: var(--color-primary-dark);
		font-weight: 500;
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	.detail-value {
		font-size: var(--text-sm);
		color: var(--color-primary-dark);
		font-weight: 600;
	}

	.amazon-link {
		display: inline-block;
		background-color: #FF9900;
		color: black;
		padding: 0.5rem 1rem;
		border-radius: var(--content-border-radius);
		text-align: center;
		text-decoration: none;
		font-weight: 600;
		font-size: var(--text-sm);
		transition: background-color 0.2s ease;
		margin-top: var(--content-spacing-sm);
	}

	.amazon-link:hover {
		background-color: #E88A00;
	}

	.book-main-content {
		display: flex;
		flex-direction: column;
		gap: var(--content-spacing-xl);
	}

	.book-header {
		border-bottom: 2px solid var(--color-secondary-warm);
		padding-bottom: var(--content-spacing-lg);
	}

	h1 {
		font-size: var(--text-4xl);
		color: var(--color-primary-dark);
		margin-bottom: var(--content-spacing-sm);
		line-height: 1.2;
	}

	.book-author {
		font-size: var(--text-xl);
		color: var(--color-secondary-warm);
		margin-bottom: var(--content-spacing-md);
	}

	.book-description {
		font-size: var(--text-lg);
		color: var(--color-primary-dark);
		line-height: 1.6;
	}

	/* Responsive design */
	@media (max-width: 768px) {
		.book-content-wrapper {
			grid-template-columns: 1fr;
		}

		.book-sidebar {
			order: 2;
		}

		.book-main-content {
			order: 1;
		}

		h1 {
			font-size: var(--text-3xl);
		}

		.book-profession {
			font-size: 0.65rem;
		}
	}

	/* Mode sombre */
	@media (prefers-color-scheme: dark) {
		.book-details {
			background-color: rgba(255, 255, 255, 0.05);
			border-color: rgba(255, 255, 255, 0.1);
		}

		.detail-label,
		.detail-value,
		.book-description {
			color: var(--text-light);
		}

		h1 {
			color: var(--text-light);
		}
	}
</style> 