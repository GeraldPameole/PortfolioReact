---
import { getCollection } from 'astro:content';
import { COLOR_CLASSES, TEXT_COLORS, ICON_COLORS } from '../config/domains';
import BaseLayout from '../layouts/BaseLayout.astro';

// Récupération et tri des articles
const articles = await getCollection('articles');
const sortedArticles = articles.sort((a, b) => 
	new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime()
);

// Récupération et tri des ouvrages
const books = await getCollection('books');
const sortedBooks = books.sort((a, b) => 
	(b.data.publishYear || 0) - (a.data.publishYear || 0)
);

// Calculer le nombre total d'articles et de livres
const totalArticles = articles.length;
const totalBooks = books.length;

// Formater la date
function formatDate(date: Date | string): string {
  const dateObj = typeof date === 'string' ? new Date(date) : date;
  return dateObj.toLocaleDateString('fr-FR', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}

// Valeurs professionnelles
const values = [
  {
    title: "Excellence Opérationnelle",
    icon: "fas fa-award",
    color: "text-blue-600",
    bgColor: "bg-blue-100 dark:bg-blue-900/30",
    description: "Je m'engage à transformer la complexité en performance mesurable. J'optimise les processus tout en maximisant les résultats en utilisant une approche méthodique et data-driven."
  },
  {
    title: "Innovation Durable",
    icon: "fas fa-lightbulb",
    color: "text-green-600",
    bgColor: "bg-green-100 dark:bg-green-900/30",
    description: "Je crois en la création de solutions innovantes qui répondent aux besoins actuels tout en anticipant les évolutions futures. L'innovation n'a de sens que si elle apporte une valeur durable."
  },
  {
    title: "Développement des Talents",
    icon: "fas fa-users",
    color: "text-purple-600",
    bgColor: "bg-purple-100 dark:bg-purple-900/30",
    description: "Je valorise la transmission des compétences et l'optimisation des performances. Je m'investis dans la création de programmes de formation personnalisés qui stimulent la montée en compétences."
  }
];

// Expériences professionnelles
const experiences = [
  {
    title: "KEOS TELECOM",
    position: "Chef de projet",
    period: "Depuis 2021",
    description: "Coordination d'équipes multidisciplinaires, performance et évolutivité, optimisation des opérations."
  },
  {
    title: "ACTIV PARTNERS",
    position: "Développeur web front-end",
    period: "2019-2021",
    description: "Gestion de projets web, développement front-end, optimisation de la sécurité des sites web."
  },
  {
    title: "SFR",
    position: "Chargé de formation & développement",
    period: "2018-2019",
    description: "Formation continue, accompagnement stratégique des équipes commerciales, optimisation des performances."
  },
  {
    title: "SFR",
    position: "Chargé de formation",
    period: "2016-2018",
    description: "Développement des compétences, création et analyse d'indicateurs, animation d'ateliers."
  }
];

// Domaines d'expertise
const expertiseDomains = [
  "Gestion de Projet", "Leadership", "Développement Web", "Optimisation Processus", 
  "Formation", "Sécurité Web", "Audit Qualité", "Gestion d'Équipe"
];
---

<BaseLayout
  title="À Propos | Gérald Paméole | Consultant Transformation Digitale"
  description="Découvrez mon parcours, mes compétences et ma vision en tant que consultant transformation digitale et chef de projet télécom"
  customClass="bg-gradient-to-br from-gray-50 to-white dark:from-gray-900 dark:to-gray-800"
  fullWidth={true}
>
  <main class="content-container-wide py-12">
    <!-- En-tête de page -->
    <section class="py-16 md:py-24 bg-gradient-to-r from-indigo-600/5 to-violet-600/5 w-screen" style="margin-left: calc(50% - 50vw); margin-right: calc(50% - 50vw)">
      <div class="content-container text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6 text-transparent bg-clip-text bg-gradient-to-r from-indigo-600 to-blue-500">
          À Propos de Moi
        </h1>
        <p class="text-xl text-[#111827] dark:text-gray-200 mb-6">
          Chef de projet télécom & Développeur Web avec plus de 15 ans d'expérience
        </p>
        <div class="flex flex-wrap justify-center gap-3 mb-8">
          <span class={`px-4 py-2 rounded-full ${COLOR_CLASSES.blue}`}>Gestion de Projet</span>
          <span class={`px-4 py-2 rounded-full ${COLOR_CLASSES.green}`}>Développement Web</span>
          <span class={`px-4 py-2 rounded-full ${COLOR_CLASSES.purple}`}>Qualité & Process</span>
          <span class={`px-4 py-2 rounded-full ${COLOR_CLASSES.red}`}>Formation</span>
          <span class={`px-4 py-2 rounded-full ${COLOR_CLASSES.orange}`}>Développement Commercial</span>
        </div>
      </div>
    </section>
    
    <!-- Section de présentation -->
    <section class="bg-white dark:bg-gray-800 rounded-xl shadow-lg mb-16">
      <div class="content-container p-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <div>
            <h2 class="text-3xl font-bold text-[#111827] dark:text-white mb-6">
              Mon Parcours
            </h2>
            <p class="text-lg text-[#111827] dark:text-gray-300 mb-6">
              Fort de plus de 15 ans d'expérience dans le secteur des télécommunications et du développement web, 
              j'ai développé une expertise unique combinant gestion de projet, développement technique et formation.
            </p>
            <p class="text-lg text-[#111827] dark:text-gray-300 mb-6">
              Mon approche se caractérise par une vision holistique des projets, où la performance technique 
              s'allie à l'efficacité opérationnelle et au développement des compétences.
            </p>
            <p class="text-lg text-[#111827] dark:text-gray-300">
              Je m'engage à créer des solutions durables qui transforment les défis en opportunités de croissance.
              </p>
            </div>
            
          <div class="text-center">
            <div class="w-64 h-64 mx-auto mb-6 rounded-full bg-gradient-to-br from-indigo-600 to-violet-600 p-1">
              <div class="w-full h-full rounded-full bg-white dark:bg-gray-800 flex items-center justify-center">
                <i class="fas fa-user-tie text-6xl text-indigo-600"></i>
              </div>
            </div>
            <h3 class="text-xl font-semibold text-[#111827] dark:text-white mb-2">
              Gérald Paméole
            </h3>
            <p class="text-gray-600 dark:text-gray-400">
              Chef de Projet Télécom & Développeur Web
            </p>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Valeurs professionnelles -->
    <section class="bg-white dark:bg-gray-800 rounded-xl shadow-lg mb-16">
      <div class="content-container p-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-[#111827] dark:text-white mb-4">
            Mes Valeurs Professionnelles
          </h2>
          <p class="text-lg text-[#111827] dark:text-gray-300">
            Les principes qui guident mon approche et mes décisions
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {values.map((value) => (
            <div class="text-center p-6 rounded-xl hover:shadow-lg transition-shadow duration-300">
              <div class={`w-16 h-16 mx-auto mb-4 rounded-full ${value.bgColor} flex items-center justify-center`}>
                <i class={`${value.icon} text-2xl ${value.color}`}></i>
              </div>
              <h3 class="text-xl font-bold text-[#111827] dark:text-white mb-3">{value.title}</h3>
              <p class="text-[#111827] dark:text-gray-300">{value.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Expériences professionnelles -->
    <section class="bg-white dark:bg-gray-800 rounded-xl shadow-lg mb-16">
      <div class="content-container p-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-[#111827] dark:text-white mb-4">
            Expérience Professionnelle
        </h2>
          <p class="text-lg text-[#111827] dark:text-gray-300">
            Un parcours riche en défis et en réussites
          </p>
        </div>
        
        <div class="space-y-6">
          {experiences.map((exp, index) => (
            <div class="flex items-start gap-6 p-6 bg-gray-50 dark:bg-gray-700 rounded-xl">
              <div class="w-12 h-12 bg-indigo-600 text-white rounded-full flex items-center justify-center font-bold text-lg">
                {index + 1}
                </div>
              <div class="flex-1">
                <h3 class="text-xl font-bold text-[#111827] dark:text-white mb-2">{exp.title}</h3>
                <p class="text-blue-600 dark:text-blue-400 font-medium mb-2">{exp.position}</p>
                <p class="text-gray-600 dark:text-gray-400 mb-2">{exp.period}</p>
                <p class="text-[#111827] dark:text-gray-300">{exp.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
    
    <!-- Domaines d'expertise -->
    <section class="bg-white dark:bg-gray-800 rounded-xl shadow-lg mb-16">
      <div class="content-container p-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-[#111827] dark:text-white mb-4">
            Domaines d'Expertise
        </h2>
          <p class="text-lg text-[#111827] dark:text-gray-300">
            Compétences techniques et managériales
          </p>
        </div>
        
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          {expertiseDomains.map((domain) => (
            <div class="bg-indigo-100 dark:bg-indigo-900/30 text-indigo-800 dark:text-indigo-300 px-4 py-3 rounded-lg text-center font-medium">
              {domain}
            </div>
          ))}
        </div>
      </div>
    </section>
    
    <!-- Derniers articles et livres -->
    <section class="bg-white dark:bg-gray-800 rounded-xl shadow-lg mb-16">
      <div class="content-container p-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-[#111827] dark:text-white mb-4">
            Mes Dernières Publications
        </h2>
          <p class="text-lg text-[#111827] dark:text-gray-300">
            Articles récents et recommandations de livres
          </p>
        </div>
        
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          <!-- Derniers articles -->
          <div>
            <h3 class="text-xl font-bold text-[#111827] dark:text-white mb-4">Articles Récents</h3>
            <div class="space-y-4">
              {sortedArticles.slice(0, 3).map((article) => (
                <div class="p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
                  <h4 class="font-semibold text-[#111827] dark:text-white mb-2">
                    <a href={`/articles/${article.slug}`} class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
                    {article.data.title}
                    </a>
                  </h4>
                  <p class="text-sm text-gray-600 dark:text-gray-400 mb-2">
                    {formatDate(article.data.publishDate)}
                  </p>
                  <p class="text-sm text-[#111827] dark:text-gray-300 line-clamp-2">
                    {article.data.description}
                  </p>
                </div>
              ))}
            </div>
            <div class="text-center mt-4">
              <a href="/articles" class="text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 font-medium">
                Voir tous les articles →
              </a>
            </div>
          </div>
          
          <!-- Livres recommandés -->
          <div>
            <h3 class="text-xl font-bold text-[#111827] dark:text-white mb-4">Livres Recommandés</h3>
            <div class="space-y-4">
              {sortedBooks.slice(0, 3).map((book) => (
                <div class="p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
                  <h4 class="font-semibold text-[#111827] dark:text-white mb-2">
                    <a href={`/books/${book.slug}`} class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
                      {book.data.title}
                    </a>
                  </h4>
                  <p class="text-sm text-gray-600 dark:text-gray-400 mb-2">
                    {book.data.author} • {book.data.publishYear}
                  </p>
                  <p class="text-sm text-[#111827] dark:text-gray-300 line-clamp-2">
                    {book.data.description}
                  </p>
                </div>
          ))}
        </div>
            <div class="text-center mt-4">
              <a href="/books" class="text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 font-medium">
                Voir tous les livres →
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Call-to-action -->
    <section class="bg-gradient-to-r from-indigo-600 to-violet-600 rounded-xl text-white text-center p-12">
      <h2 class="text-3xl font-bold mb-4">Envie d'échanger ?</h2>
      <p class="text-xl mb-8 opacity-90">
        Discutons de vos projets, de vos défis ou simplement de nos expériences communes
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="px-8 py-3 bg-white text-indigo-600 rounded-lg font-semibold hover:bg-gray-100 transition-colors">
          Me contacter
        </a>
        <a href="/projets" class="px-8 py-3 border-2 border-white text-white rounded-lg font-semibold hover:bg-white hover:text-indigo-600 transition-colors">
          Voir mes projets
        </a>
      </div>
    </section>
  </main>
</BaseLayout>

<style>
  /* Styles cohérents avec le design system */
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .content-container {
      padding: 0 1rem;
    }
    
    section {
      padding: 1.5rem;
    }
    
    .grid-cols-4 {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>
